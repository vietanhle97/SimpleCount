<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="com.example.simplecount.data.db.entity.User" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:clickable="true">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/member_checkbox"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:checked="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/member_name"
            android:text="Vanh"
            android:textSize="19dp"
            android:layout_toEndOf="@id/member_checkbox"
            android:layout_marginStart="36dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/member_portion"
            android:layout_centerHorizontal="true"
            android:text="1"
            android:inputType="number"
            android:layout_centerVertical="true"

            android:layout_marginEnd="36dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/member_amount"
            android:textSize="19dp"
            android:inputType="numberDecimal"
            android:layout_gravity="center"
            android:layout_toEndOf="@id/member_portion"
            lay="true"
            android:gravity="center"/>
    </RelativeLayout>
</layout>